  options.id
  options.options
  options.isRate

mixin radio-group(options)
  - className = "radio-group"
  if !options
    - options = {}
  if options.isRate
    - className = "rate-button"
  - set = ('options' in options) ? options.options : []

  div(
    class=className
    id=options.id
  )
    each option, index in set
      if options.isRate
        +option(options, option, index, className)
      else
        div(
          class=`${className}__option`
          class=(index === 0) ? `${className}__option_first` : ""
        )
          +option(options, option, index, className)

//-
  group.id
  group.name
  group.isRate

  option.value
  option.checked
  option.label

  index
  className

mixin option(group, option, index, className)
  input(
    class=`${className}__box`
    type="radio"
    id=`${group.id}_${index}`
    name=group.name ? group.name : group.id
    value=option.value ? option.value : index
    checked=option.checked ? true : false
  )
  label(
    for=`${group.id}_${index}`
    class=`${className}__label`
    class=option.checked ? `${className}__label_checked` : ""
    class=(index === 0) ? `${className}__label_first` : ""
    class=(index === 1 && group.isRate) ? `${className}__label_second` : ""
    class=!group.isRate ? "text_rare_less" : ""
  )=option.label
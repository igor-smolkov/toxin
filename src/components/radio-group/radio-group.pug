  options.isRate

mixin radio-group(options)
  - let className = "radio-group"
  if !options
    - options = {}
  if options.isRate
    - className = "rate-button"
  - const set = ('options' in options) ? options.options : []

  DIV(
    class=className
    id=options.id
  )
    each option, index in set
      if options.isRate
        +option(options, option, index, className)
      else
        DIV(
          class=`${className}__option`
          class=(index === 0) ? `${className}__option_first` : ""
        )
          +option(options, option, index, className)


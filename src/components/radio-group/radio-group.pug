mixin option(group, option, index, className)
  INPUT(
    class=`${className}__box`
    type="radio"
    id=`${group.id}_${index}`
    name=group.name ? group.name : group.id
    value=option.value ? option.value : index
    checked=option.isChecked ? true : false
  )
  LABEL(
    for=`${group.id}_${index}`
    class=`${className}__label`
    class=option.isChecked ? `${className}__label_checked` : ""
    class=(index === 0) ? `${className}__label_first` : ""
    class=(index === 1 && group.isRate) ? `${className}__label_second` : ""
    class=!group.isRate ? "text_rare_less" : ""
  )=option.label
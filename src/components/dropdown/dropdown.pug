include ../field/field.pug

mixin dropdown(value, type)
  if type == 'field'
    .dropdown.dropdown_forward
      +field('default', 'text', value, 'Email')
  else
    .dropdown
      if type
        if type == 'filter'
          +field('default', 'text', value, '', '', true)
        else
          +field('default', type, value)
      else
        +field('default', 'text', value)

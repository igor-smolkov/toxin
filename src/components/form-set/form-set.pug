mixin form-set(options = {})
  - const blockName = "form-set"

  FIELDSET(
    class=blockName
    class=`js-${blockName}`
  )
    if options.title 
      LEGEND(class=`${blockName}__legend`)
        H3(class=`${blockName}__title`)=options.title
          if options.details
            SPAN(
              class=`${blockName}__details`
              class=`js-${blockName}__details`
            )=options.details
    if options.isEmpty 
      block 
    else if options.isGrouped
      .form-set__group(
        class=options.isInlined ? 'form-set__group_inlined' :''
        class=options.isMarginNone ? 'form-set__group_margin_none' :''
        class=options.isAligned ? 'form-set__group_aligned' :''
        class=options.withLine ? 'form-set__group_with-line' :''
      )
        block
    else
      .form-set__element(
        class=options.isIndented ? 'form-set__element_indented' :''
        class=options.isMarginNone ? 'form-set__element_margin_none' :''
      )
        block
    if options.description
      P(class=`${blockName}__description`)=options.description
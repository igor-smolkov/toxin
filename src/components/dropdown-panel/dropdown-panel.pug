include ../countable-item/countable-item.pug
include ../dropdown-control/dropdown-control.pug

mixin dropdown-panel(options = {})
  - const blockName = "dropdown-panel";
  - const { list = [], withControl } = options;
  - let isClear = true;
  if withControl
    each item in list
      if item.count
        if item.count !== 0
          - isClear = false;

  SECTION(class=blockName)
    UL(class=`${blockName}__list`)
      each item, index in list
        LI(class=`${blockName}__countable-item`)
          +countable-item(item)
    if withControl
      SECTION(class=`${blockName}__control`)
        +dropdown-control({ isClear })

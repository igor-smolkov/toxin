include ../dropdown-control/dropdown-control.pug

mixin calendar(options = {})
  - const blockName = "calendar"
  
  DIV(
    class=blockName
    id=options.id
    data-from=options.from
    data-to=options.to
    data-active=options.active
  )
    DIV(
      class=`${blockName}__plugin`
      id=`${options.id}-plugin`
    )
    DIV(class=`${blockName}__control`)
      +dropdown-control({ 
        id: `${options.id}-control`, 
        isClear: (options.to || options.from || options.active) ? false : true,
      })
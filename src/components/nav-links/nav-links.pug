include ../nav-link/nav-link.pug

mixin nav-links(options = {})
  - const blockName = "nav-links";
  - const { navLinks = [], isHead } = options;

  UL(class=blockName, class=isHead ? `${blockName}_head` : "")
    each item, index in navLinks
      - const isFirst = index === 0;
      LI(
        class=`${blockName}__item`,
        class=item.isDropdown ? `${blockName}__item_dropdown` : "",
        class=isFirst ? `${blockName}__item_first` : ""
      )
        +nav-link(item)

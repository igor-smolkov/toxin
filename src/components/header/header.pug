include ../logo/logo.pug
include ../button/button.pug

mixin menu__item(item)
  if item.user
    li.menu__item.menu__item_user
      a(href=item.link)=item.text
  else if item.dropdown
    li.menu__item.menu__item_dropdown
      a(href=item.link)=item.text
  else
    li.menu__item
      if item.hovered
        a(href=item.link).hover=item.text
      else
        a(href=item.link)=item.text

mixin header(user)
  header.header
    +logo('toxin')
    nav.menu
      ul
        +menu__item({ link: '#', text: 'О нас', hovered: true })
        +menu__item({ link: '#', text: 'Услуги', dropdown: true })
        +menu__item({ link: '#', text: 'Вакансии' })
        +menu__item({ link: '#', text: 'Новости' })
        +menu__item({ link: '#', text: 'Соглашения', dropdown: true })
        if user
          +menu__item({ link: '#', text: 'Юлий Цезарь', user: true })
        else 
          +button({text: 'войти', style: 'border'})
          +button({text: 'зарегистрироваться'})
    
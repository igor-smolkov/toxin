include ../logo/logo.pug
include ../menu/menu.pug
include ../burger/burger.pug

mixin header(options = {})
  - const blockName = "header"
  - const { name, isCustom, user } = options

  DIV(class=blockName)
    DIV(class=`${blockName}__logo`)
      +logo
    DIV(class=`${blockName}__burger`)
      +burger(name)
        if (isCustom)
          block
        else
          +menu({
            navLinks: [
              { link: "/mock-address/change-me", text: "О нас" },
              { 
                link: "/mock-address/change-me", 
                text: "Услуги", 
                isDropdown: true, 
                list: [
                  { link: "/change-link", text: 'Прачечная' }, 
                  { link: "/change-link", text: 'Трансфер' }, 
                  { link: "/change-link", text: 'Триумф' },
                ],
                name: "services" 
              },
              { link: "/mock-address/change-me", text: "Вакансии" },
              { link: "/mock-address/change-me", text: "Новости" },
              { 
                link: "/mock-address/change-me", 
                text: "Соглашения", 
                isDropdown: true, 
                list: [
                  { link: "/change-link", text: 'Бронирование' }, 
                  { link: "/change-link", text: 'Wi-Fi' }, 
                  { link: "/change-link", text: 'Разоружение' },
                ], 
                name: "agreements" 
              },
            ],
            user: user ? { link: "/mock-address/change-me", text: user } : null
          })   
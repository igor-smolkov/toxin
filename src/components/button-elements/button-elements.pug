include ../form-set/form-set.pug
include ../slider/slider.pug
include ../button/button.pug
include ../pagination/pagination.pug

mixin button-elements
  - const blockName = "button-elements";
  -
    const rangeFormSetOptions = {
      title: "Range Slider",
      details: "5 000₽ - 10 000₽",
      isIndented: true,
    }
    const borderButtonOptions = {
      caption: "click me",
      isBorderOnly: true,
      isHovered: true,
    }
    const textButtonOptions = {
      caption: "click me",
      isTextOnly: true,
      isHovered: true,
    }
    const paginationOptions = {
      lastPage: 15,
      description: "1 – 12 из 100+ вариантов аренды",
    }

  ARTICLE(class=blockName)
    SECTION(
      class=`${blockName}__section`,
      class=`${blockName}__section_first`
    )
      +form-set(rangeFormSetOptions)
        +slider({ values: [0, 5000, 10000, 16000] })
    SECTION(class=`${blockName}__section`)
      +form-set({ title: "Buttons", isEmpty: true })
        SECTION.form-set__elements-container
          SECTION.form-set__group.form-set__group_inlined
            P.form-set__element.form-set__element_widen
              +button({ caption: "click me" })
            P.form-set__element.form-set__element_inlined.form-set__element_indent-in_buttons-left.form-set__element_widen
              +button({ caption: "click me", isHovered: true })
          SECTION.form-set__group.form-set__group_inlined.form-set__group_indent-in_buttons
            P.form-set__element.form-set__element_widen
              +button({ caption: "click me", isBorderOnly: true })
            P.form-set__element.form-set__element_inlined.form-set__element_indent-in_buttons-left.form-set__element_widen
              +button(borderButtonOptions)
          SECTION.form-set__group.form-set__group_inlined.form-set__group_indent-in_buttons
            P.form-set__element
              +button({ caption: "click me", isTextOnly: true })
            P.form-set__element.form-set__element_inlined.form-set__element_indent-in_buttons-left
              +button(textButtonOptions)
          P.form-set__element.form-set__element_indent-in_buttons-top
            +button({ caption: "перейти к оплате", withArrow: true })
    SECTION(class=`${blockName}__section`)
      +form-set({ title: "Pagination", isIndented: true })
        +pagination(paginationOptions)

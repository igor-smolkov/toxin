include ../link-container/link-container.pug
include ../button/button.pug
include ../form-set/form-set.pug
include ..//radio-group/radio-group.pug
include ../text-field/text-field.pug
include ../toggle/toggle.pug

mixin check-in
  - const blockName = "check-in";
  -
    const radioGroupOptions = {
      name: "sex",
      set: [
        { label: "Мужчина", isChecked: true },
        { label: "Женщина" },
      ],
    }
    const dobTextFieldOptions = {
      name: "dob",
      placeholder: "ДД.ММ.ГГГГ",
      isMasked: true,
    }
    const logInFormSetOptions = {
      title: "Данные для входа в сервис",
      isGrouped: true,
      isMarginNone: true,
    }
    const emailTextFieldOptions = {
      name: "email",
      placeholder: "Email",
      type: "email",
    }
    const passwordTextFieldOptions = {
      name: "password",
      placeholder: "Пароль",
      type: "password",
    }
    const regButtonOptions = {
      caption: "Зарегистрироваться",
      type: "submit",
      withArrow: true,
    }
    const signInFormSetOptions = {
      isInlined: true,
      isGrouped: true,
      isMarginNone: true,
    }
    const signInButtonOptions = {
      caption: "Войти",
      isBorderOnly: true,
    }
    const signInLinkContainerOptions = {
      href: "sign-in.html",
      title: signInButtonOptions.caption,
    }

  ARTICLE(class=blockName)
    SECTION(
      class=`${blockName}__section`,
      class=`${blockName}__section_first`
    )
      +form-set({ isGrouped: true, isMarginNone: true })
        P.form-set__element.form-set__element_margin_none
          +text-field({ name: "name", placeholder: "Имя" })
        P.form-set__element.form-set__element_indent-mid
          +text-field({ name: "surname", placeholder: "Фамилия" })
        SECTION.form-set__element.form-set__element_indent-mid
          +radio-group(radioGroupOptions)
    SECTION(
      class=`${blockName}__section`,
      class=`${blockName}__section_rare_more`
    )
      +form-set({ title: "Дата рождения" })
        +text-field(dobTextFieldOptions)
    SECTION(class=`${blockName}__section`)
      +form-set(logInFormSetOptions)
        P.form-set__element
          +text-field(emailTextFieldOptions)
        P.form-set__element.form-set__element_indent-mid
          +text-field(passwordTextFieldOptions)
        P.form-set__element.form-set__element_indent-mid
          +toggle({ name: "sub", label: "Получать спецпредложения" })
    SECTION(
      class=`${blockName}__section`,
      class=`${blockName}__section_rare_more`
    )
      +button(regButtonOptions)
    SECTION(
      class=`${blockName}__section`,
      class=`${blockName}__section_last`
    )
      +form-set(signInFormSetOptions)
        SECTION.form-set__element.form-set__element_align-mid.form-set__element_increased
          P(class=`${blockName}__question`)= "Уже есть аккаунт на Toxin"
        P.form-set__element.form-set__element_indent_left
          +link-container(signInLinkContainerOptions)
            +button(signInButtonOptions)

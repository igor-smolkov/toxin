  options.id
  options.lastPage
  options.description

mixin pagination(options)
  - const className = "pagination"
  if !options
    - options = {}

  DIV(
    class=className
  )
    DIV(
      class=`${className}__items`
    )
      each value, index in ["1", "2", "3", "...", options.lastPage]
        BUTTON(
          class=`${className}__item`
          class=(index===0) ? `${className}__item_current` : ""
        )
          P(
            class=`${className}__value`
          )=value
      BUTTON(
        class=`${className}__item`
        class=`${className}__item_next`
        class="material-icons"
      )="arrow_forward"
    P(
      class=`${className}__description`
    )= options.description
  options.id
  options.items

mixin extra-list(options)
  - const blockName = "extra-list"
  if !options
    - options = {}
  if !options.items
    - options = []

  UL.extra-list(
    id=options.id ? options.id : ""
    class=blockName
  )
    each item, index in options.items
      LI(
        class=`${blockName}__item`
        class=(index===0) ? `${blockName}__item_first` :""
      )
        +extra-list-item(item)

//- 
  options.title
  options.details
  options.icon

mixin extra-list-item(options)
  - const blockName = "extra-list-item"
  if !options
    - options = {}
  
  DIV(
    class=blockName
  )
    P(
      class=`${blockName}__title`
    )=options.title
    P(
      class=`${blockName}__details`
    )=options.details
    I(
      class=`${blockName}__icon`
    )=options.icon


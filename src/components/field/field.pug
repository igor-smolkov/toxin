mixin field(field)
  if field.demo
    input.field.field_hover(type='text' value=field.value placeholder=field.placeholder disabled=field.disabled)
  else
    if field.subscription
      .field_subscription
        input.field(type='text' value=field.value placeholder=field.placeholder disabled=field.disabled)
    else
      if field.masked
        if field.mask
          input.field.field_masked(type='text' value=field.value placeholder=field.placeholder pattern=field.mask title=field.placeholder disabled=field.disabled)
        else
          input.field.field_masked(type='text' value=field.value placeholder=field.placeholder title=field.placeholder disabled=field.disabled pattern='(0[1-9]|1[0-9]|2[0-9]|3[01]).(0[1-9]|1[012]).[0-9]{4}')
      else
        if field.type
          input.field(type=field.type value=field.value placeholder=field.placeholder disabled=field.disabled)
        else
          input.field(type='text' value=field.value placeholder=field.placeholder disabled=field.disabled)
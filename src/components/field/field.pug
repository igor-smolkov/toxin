mixin field(mode, value, placeholder)
  case mode
    when 'hover'
        input.field.field_hover(type='text' value=value placeholder=placeholder)
    when 'focus'
        input.field.field_focus(type='text' value=value placeholder=placeholder)
    when 'masked'
        input.field.field_masked(
            type = 'text' 
            value = value 
            placeholder = placeholder 
            pattern = '(0[1-9]|1[0-9]|2[0-9]|3[01]).(0[1-9]|1[012]).[0-9]{4}'
            title = placeholder
        )
    default
        input.field(type='text' value=value placeholder=placeholder)
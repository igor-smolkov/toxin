mixin check-button(options = {})
  - const blockName = "check-button"
  - const { isChecked, details, name, value, label } = options

  LABEL(
    class=blockName
    class=`js-${blockName}`
    class=isChecked ? `${blockName}_checked` : ""
    class=details ? `${blockName}_rich` : ""
  )
    INPUT(
      class=`${blockName}__box`
      class=`js-${blockName}__box`
      class=isChecked ? `${blockName}__box_checked` : ""
      name=name
      value=value ? value : name
      type="checkbox"
      checked=isChecked
    )
    SPAN(
      class=`${blockName}__label`
      class=isChecked ? `${blockName}__label_checked` : ""
    )=label ? label : value
      if details
        SPAN(
          class=`${blockName}__details`
        )=details
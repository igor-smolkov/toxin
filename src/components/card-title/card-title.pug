include ../title-main/title-main.pug
include ../title-details/title-details.pug

mixin card-title(options = {})
  - const blockName = "card-title";
  - const { title, isSmall } = options;
  - const titleOnly = (typeof title) === "string";

  if titleOnly
    H1(class=blockName)= title
  else
    - const { main, details } = title
    SECTION(
      class=blockName
      class=`${blockName}_size_small`,
    )
      if (!isSmall)
        H1(class=`${blockName}__main`)
          +title-main(main)
      else
        H2(
          class=`${blockName}__main`,
          class=`${blockName}__main_size_small`,
        )
          +title-main(main)
      if (details)
        P(class=`${blockName}__details`)
          +title-details(details)

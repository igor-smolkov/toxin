//-
  options.name
  options.example

mixin type-section(options = {})
  - const blockName = "type-section"
  - const { name, example } = options

  SECTION(
    class=blockName
    class=(name === "H1") ? `${blockName}_first` : ""
  )
    case name
      when "H1"
        H1(class=`${blockName}__name`)=name
        H1(class=`${blockName}__example`)=example
      when "H2"
        H2(class=`${blockName}__name`)=name
        H2(class=`${blockName}__example`)=example
      when "H3"
        H3(class=`${blockName}__name`)=name
        H3(class=`${blockName}__example`)=example
      default
        DIV(class=`${blockName}__name`)=name
        DIV(class=`${blockName}__example`)=example
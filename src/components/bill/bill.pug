include ../invoice-line/invoice-line.pug

mixin bill(options = {})
  - const blockName = "bill";
  - const { list = [], total } = options;

  SECTION(class=blockName, class=`js-${blockName}`)
    UL(class=`${blockName}__list`)
      each item, index in list
        - const isFirst = index === 0;
        LI(
          class=`${blockName}__item`,
          class=isFirst ? `${blockName}__item_first` : ""
        )
          +invoice-line(item)
    FOOTER(class=`${blockName}__total`)
      +invoice-line({ name: "Итого", price: total, isTitle: true })

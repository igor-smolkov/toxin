include ../invoice-line/invoice-line.pug

//- 
  options.list
  options.total

mixin bill(options = {})
  - const blockName = "bill"
  - const list = options.list ? options.list : []

  DIV(
    class=blockName
    class=`js-${blockName}`
  )
    UL(class=`${blockName}__list`)
      each item, index in list
        LI(
          class=`${blockName}__item`
          class=(index===0) ? `${blockName}__item_first` : ""
        )
          +invoice-line(item)
    H2(class=`${blockName}__total`)
      +invoice-line({ name: "Итого", price: options.total, withLine: true })
mixin about 
  - const blockName = "about"
  DIV(class=blockName)
    DIV(class=`${blockName}__logo`)
      +logo
    DIV(class=`${blockName}__text`)="Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»"

//-

mixin widgets-list(list = [])
  - const blockName = "widgets-list"
  UL(class=blockName)
    each item in list
      LI(class=`${blockName}__item`)
        +widget(item)
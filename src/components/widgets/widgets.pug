    DIV(class=`${blockName}__about`)
      +about
    DIV(class=`${blockName}__widgets-list`)
      +widgets-list([
        { 
          title: "Навигация",
          links: [
            { link: "/mock-address/change-me", text: "О нас" },
            { link: "/mock-address/change-me", text: "Новости" },
            { link: "/mock-address/change-me", text: "Служба поддержки" },
            { link: "/mock-address/change-me", text: "Услуги" },
          ]
        },
        { 
          title: "О нас",
          links: [
            { link: "/mock-address/change-me", text: "О сервисе" },
            { link: "/mock-address/change-me", text: "Наша команда" },
            { link: "/mock-address/change-me", text: "Вакансии" },
            { link: "/mock-address/change-me", text: "Инвесторы" },
          ]
        },
        { title: "Служба поддержки",
          links: [

include ../logo/logo.pug
include ../widget/widget.pug

mixin widgets
  - const blockName = "widgets";
  -
    const list = [
      {
        title: "Навигация",
        links: [
          { link: "/mock-address/change-me", text: "О нас" },
          { link: "/mock-address/change-me", text: "Новости" },
          { link: "/mock-address/change-me", text: "Служба поддержки" },
          { link: "/mock-address/change-me", text: "Услуги" },
        ],
      },
      {
        title: "О нас",
        links: [
          { link: "/mock-address/change-me", text: "О сервисе" },
          { link: "/mock-address/change-me", text: "Наша команда" },
          { link: "/mock-address/change-me", text: "Вакансии" },
          { link: "/mock-address/change-me", text: "Инвесторы" },
        ],
      },
      {
        title: "Служба поддержки",
        links: [
          { link: "/mock-address/change-me", text: "Соглашения" },
          { link: "/mock-address/change-me", text: "Сообщества" },
          { link: "/mock-address/change-me", text: "Связь с нами" },
        ],
      },
      {
        title: "Подписка",
        text: "Получайте специальные предложения и новости сервиса",
        withSubscribe: true,
      },
    ]

  SECTION(class=blockName)
    SECTION(class=`${blockName}__about`)
      +logo
      P(class=`${blockName}__message`)= "Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»"
    UL(class=`${blockName}__widgets-list`)
      each item, index in list
        - const isLast = index === list.length - 1
        LI(
          class=`${blockName}__widget`, 
          class=isLast && `${blockName}__widget_last`
        )
          +widget(item)

include ../type-section/type-section.pug

mixin types-section
  - const blockName = "types-section";
  -
    const typeSectionOptionsList = [
      {
        name: "H1",
        example: "This one is the sub-section or widget title",
      },
      {
        name: "H2",
        example: "Next one is the item title inside widgets",
      },
      {
        name: "H3",
        example: "This is a label or CTA text",
      },
      {
        name: "Body",
        example: "This is the body text which is used for most of the design, like paragraphs, lists, etc.",
      },
    ]

  ARTICLE(class=blockName)
    each typeSectionOptions, index in typeSectionOptionsList
      - const isFirst = index === 0;
      SECTION(
        class=`${blockName}__type-section`,
        class=isFirst ? `${blockName}__type-section_first` : ''
      )
        +type-section(typeSectionOptions)
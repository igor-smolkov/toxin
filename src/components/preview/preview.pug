mixin preview(options)
  - const blockName = "preview"
  if !options
    - options = {}
  - const imgs = options.imgs ? options.imgs : []
  - const selected = options.selected ? options.selected : 0
  
  DIV(
    class=blockName
    class=`js-${blockName}`
    class=options.isHovered ? `${blockName}_hovered` : ""
    data-selected=selected
    data-number=options.number
  )
    DATALIST(class=`${blockName}__data`)
      each img in imgs
        OPTION(value=img)
    IMG(
      class=`${blockName}__img`
      src=options.imgs[selected]
      alt="Превью номера"
    )
    DIV(class=`${blockName}__arrows`)
      +carousel-arrows-control
    DIV(class=`${blockName}__points`)
      +carousel-points-control({
        name: `views-${options.number}`,
        count: `${imgs.length}`,
        selected: selected,
      })


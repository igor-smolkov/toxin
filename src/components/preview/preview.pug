mixin carousel-arrows-control
  - const blockName = "carousel-arrows-control"
  DIV(class=blockName)
    BUTTON(
      class=`${blockName}__arrow`
      class=`${blockName}__arrow_prev`
    )
    BUTTON(
      class=`${blockName}__arrow`
      class=`${blockName}__arrow_next`
    )

//- 
  options.count
  options.selected

mixin carousel-points-control(options = {})
  - const blockName = "carousel-points-control"
  DIV(class=blockName)
    - let i = 0
    while i < options.count
      INPUT(
        class=`${blockName}__input`
        type="radio"
        name=options.name
        id=`${options.name}-${i}`
        value=i
        checked=(i===options.selected) ? true : false
      )
      LABEL(
        for=`${options.name}-${i}`
        class=`${blockName}__label`
        class=(i===options.selected) ? `${blockName}__label_checked` : ""
      )
      - i++
  options.images
  options.selected
  options.isHovered

mixin preview(options = {})
  - const blockName = "preview"
  - const images = options.images ? options.images : []
  - const selected = options.selected ? options.selected : 0
  
  DIV(
    class=blockName
    class=`js-${blockName}`
    class=options.isHovered ? `${blockName}_hovered` : ""
    data-selected=selected
    data-number=options.number
  )
    DATALIST(
      class=`${blockName}__data`
      class=`js-${blockName}__data`
    )
      each img in images
        OPTION(value=img)
    IMG(
      class=`${blockName}__img`
      class=`js-${blockName}__img`
      src=options.images[selected]
      alt="Превью номера"
    )
    DIV(class=`${blockName}__arrows`)
      BUTTON(
        class=`${blockName}__arrow`
        class=`${blockName}__arrow_prev`
        class=`js-${blockName}__arrow-prev`
      )
      BUTTON(
        class=`${blockName}__arrow`
        class=`${blockName}__arrow_next`
        class=`js-${blockName}__arrow-next`
      )
    DIV(
      class=`${blockName}__points`
      class=`js-${blockName}__points`
    )
      - let i = 0
      while i < images.length
        INPUT(
          class=`${blockName}__point-input`
          type="radio"
          name=`views-${options.number}`
          id=`views-${options.number}-${i}`
          value=i
          checked=(i===selected)
        )
        LABEL(
          for=`views-${options.number}-${i}`
          class=`${blockName}__point-label`
          class=(i===selected) ? `${blockName}__point-label_checked` : ""
        )
        - i++
mixin like-button(options = {})
  - const blockName = "like-button"
  - const { isChecked, name, value, label } = options

  LABEL(
    class=blockName
    class=`js-${blockName}`
    class=isChecked ? `${blockName}_checked` : ""
  )
    INPUT(
      class=`${blockName}__box`
      class=`js-${blockName}__box`
      class=isChecked ? `${blockName}__box_checked` : ""
      name=name
      value=value ? value : name
      type="checkbox"
      checked=isChecked
    )
    SPAN(
      class=`${blockName}__label`
      class=`js-${blockName}__label`
      class=isChecked ? `${blockName}__label_checked` : ""
    )=label ? label : value
    SPAN(class=`${blockName}__icon`)

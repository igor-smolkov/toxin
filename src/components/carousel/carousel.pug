mixin carousel(options = {})
  - const blockName = "carousel";
  - const { delaySec, slides } = options;
  SECTION(
    class=blockName,
    class=`js-${blockName}`,
    data-delay=delaySec
  )
    SECTION(
      class=`${blockName}__content`, 
      class=`js-${blockName}-content`
    )
      block
    DATALIST(class=`${blockName}__links`)
      each slide, index in slides
        OPTION(
          class=`${blockName}__link`,
          class=`js-${blockName}-link`,
          value=slide
        )

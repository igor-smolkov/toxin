  options.rate
  options.reviews

mixin card-form-room-rate-content(options = {})
  +form-section
    +form-set({ isGrouped: true, isInlined: true, withLine: true, isAligned: true })
      .form-set__element
        +rate-button({ name: `${options.number}-rate`, value: options.rate })
      .form-set__element          
        +reviews-counter(options.reviews)
include ../button/button.pug

//-
  options.id
  options.isClear

mixin dropdown-control(options)
  - const blockName = "dropdown-control"
  if !options
    - options = {}
  - const isClear = options.isClear === false ? false : true

  DIV(
    class=blockName
    id=options.id
  )
    DIV(class=`${blockName}__clear`)
      +button({ 
        id: `${options.id}-clear`, 
        caption: "Очистить", 
        isWithArrow: false, 
        isTextOnly: true,
        isNone: isClear,
      })
    DIV(class=`${blockName}__apply`)
      +button({ 
        id: `${options.id}-apply`, 
        caption: "Применить", 
        isWithArrow: false, 
        isTextOnly: true 
      })
include ../button/button.pug

mixin dropdown-control(options = {})
  - const blockName = "dropdown-control";
  - const isClear = !(options.isClear === false);
  -
    const clearButtonOptions = {
      caption: "Очистить",
      isTextOnly: true,
      isNone: isClear,
    }

  DIV(class=blockName, class=`js-${blockName}`)
    DIV(
      class=`${blockName}__clear`,
      class=`js-${blockName}__clear`
    )
      +button(clearButtonOptions)
    DIV(
      class=`${blockName}__apply`,
      class=`js-${blockName}__apply`
    )
      +button({ caption: "Применить", isTextOnly: true })

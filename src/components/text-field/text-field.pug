//-
  options.name
  options.type
  options.isFilter
  options.value
  options.placeholder
  options.isMasked
  options.isHovered
  options.isFocused
  options.isDirected
  options.withBorder

mixin text-field(options = {})
  if options.isDirected
    .field-submit
      +text-field-base(options)
      INPUT.field-submit__button(type="submit" value="arrow_forward")
  else
    +text-field-base(options)

mixin text-field-base(options)
  if !("withBorder" in options)
    - options.withBorder = true

  INPUT.text-field(
    name=options.name
    type=`${
      options.type 
        ? 
        options.isFilter ? "text" : options.type 
        : 
      "text"
    }`
    value=!options.isFilter ? options.value : `${options.dateFrom} - ${options.dateTo}`
    placeholder=options.placeholder
    pattern=options.isMasked ? "(0[1-9]|1[0-9]|2[0-9]|3[01]).(0[1-9]|1[012]).[0-9]{4}" : false
    readonly=options.isFilter ? true : false
    class=options.isHovered ? "text-field_hovered" : ""
    class=options.isFocused ? "text-field_focused" : ""
    class=options.isDirected ? "text-field_directed" : ""
    class=(options.isMasked || options.type === "date") ? " text-field_masked" : ""
    class=options.withBorder ? "" : "text-field_border_none"
  )
mixin text-field(props)
  input.text-field(
    id=props.id 
    type=`${props.type ? props.type : "text"}`
    value=props.value
    placeholder=props.placeholder
    pattern=`${props.masked ? "(0[1-9]|1[0-9]|2[0-9]|3[01]).(0[1-9]|1[012]).[0-9]{4}" : "*"}`
    class=`
      ${props.hovered ? " text-field_hovered" : ""}
      ${props.focused ? " text-field_focused" : ""}
      ${props.masked || props.type === "date" ? " text-field_masked" : ""}
    `
  )
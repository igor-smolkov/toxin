//-
  options.directed

mixin text-field(options)
  if !options
    - options = {}

  if options.directed
    .field-submit
      +text-field-base(options)
      input.field-submit__btn(type="submit")
  else
    +text-field-base(options)

//-
  options.id
  options.name
  options.type
  options.filter
  options.value
  options.placeholder
  options.masked
  options.hovered
  options.focused
  options.directed

mixin text-field-base(options)
  input.text-field(
    id=options.id
    name=options.name ? options.name : options.id
    type=`${
      options.type 
        ? 
        options.filter ? "text" : options.type 
        : 
      "text"
    }`
    value=options.value
    placeholder=options.placeholder
    pattern=options.masked ? "(0[1-9]|1[0-9]|2[0-9]|3[01]).(0[1-9]|1[012]).[0-9]{4}" : false
    readonly=options.filter ? true : false
    class=options.hovered ? "text-field_hovered" : ""
    class=options.focused ? "text-field_focused" : ""
    class=options.directed ? "text-field_directed" : ""
    class=(options.masked || options.type === "date") ? " text-field_masked" : ""
  )
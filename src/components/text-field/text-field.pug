mixin text-field(options)
  - const blockName = "text-field"
  if !("withBorder" in options)
    - options.withBorder = true

  INPUT.text-field(
    name=options.name
    type=`${
      options.type 
        ? 
        options.isFilter ? "text" : options.type 
        : 
      "text"
    }`
    value=!options.isFilter ? options.value : `${options.dateFrom} - ${options.dateTo}`
    placeholder=options.placeholder
    pattern=options.isMasked ? "(0[1-9]|1[0-9]|2[0-9]|3[01]).(0[1-9]|1[012]).[0-9]{4}" : false
    readonly=options.isFilter ? true : false
    class=options.isHovered ? `${blockName}_hovered` : ""
    class=options.isFocused ? `${blockName}_focused` : ""
    class=options.isDirected ? `${blockName}_directed` : ""
    class=(options.isMasked || options.type === "date") ? `${blockName}_masked` : ""
    class=options.withBorder ? "" : `${blockName}_border_none`
    class=options.withRightSpace ? `${blockName}_with-right-space` : ""
  )
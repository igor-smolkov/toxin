include ../../../../components/section/section.pug

include ../../../../components/form-section/form-section.pug

mixin button-elements
  .button-elements
    .button-elements__section.button-elements__section_first
      +form-section({
        title: "Range Slider",
        details: '5 000₽ - 10 000₽',
        field: {
          id: "range-slider",
          slider: true,
          values: [0, 30.4, 63.5, 100],
        },
      })
    .button-elements__section
      +form-section({
        title: "Buttons",
        fields: [
          {
            id: "button-default", 
            caption: "click me", 
            button: true,
            none_arrow: true,
          },
          {
            id: "button-default-hover", 
            caption: "click me", 
            button: true, 
            hovered: true,
            none_arrow: true,
          },
        ]
      })
    .button-elements__section.button-elements__section_compacted
      +form-section({
        fields: [
          {
            id: "button-border", 
            caption: "click me", 
            button: true, 
            border_only: true,
            none_arrow: true,
          },
          {
            id: "button-border-hover", 
            caption: "click me", 
            button: true, 
            border_only: true, 
            hovered: true,
            none_arrow: true,
          },
        ]
      })
    .button-elements__section.button-elements__section_compacted
      +form-section({
        fields: [
          {
            id: "button-link", 
            caption: "click me", 
            button: true,
            text_only: true,
            none_arrow: true,
          },
          {
            id: "button-link-hover", 
            caption: "click me", 
            button: true,
            text_only: true,
            hovered: true,
            none_arrow: true,
          },
        ]
      })
    .button-elements__section.button-elements__section_compacted
      +form-section({
        field: {
          id: "button-with-arrow", 
          caption: "перейти к оплате", 
          button: true,
        }
      })
    .button-elements__section
      +section({
        title: { name: 'pagination' },
        content: { 
          type: 'pagination',
          last: 15,
          description: '1 – 12 из 100+ вариантов аренды'
        }
      })
    
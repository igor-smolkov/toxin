extends ../../../layout

include ./field-elements/field-elements.pug
include ./check-elements/check-elements.pug
include ./button-elements/button-elements.pug

include ../../../components/logo/logo.pug

include ../../../components/section/section.pug

block variables
  - var title = "TOXIN - UI kit"

block content
    HEADER.page__header
      +logo
    MAIN.page__main
      .form-elements
        .form-elements__section
          .simple-elements
            .simple-elements__section
              +field-elements
            .simple-elements__section.simple-elements__section_shrunken
              +check-elements
            .simple-elements__section
              +button-elements
        .form-elements__section.form-elements__section_margin_to-dropdowns
          .dropdowns
            .dropdowns_section_1
              +section({
                title: { 
                  name: 'dropdown',
                  details: 'Default'
                },
                content: { 
                  type: 'dropdown',
                  value: '2 спальни, 2 кровати...',
                  demo: true
                }
              })
              +section({
                title: { 
                  name: 'dropdown',
                  details: 'expanded'
                },
                content: { 
                  type: 'dropdown',
                  value: '2 спальни, 2 кровати...',
                  list: [
                    { name: 'спальни', count: 2 },
                    { name: 'кровати', count: 2 },
                    { name: 'ванные комнаты' }
                  ],
                  expanded: true
                }
              })
            .dropdowns_section_2
              +section({
                title: { name: 'dropdown' },
                content: { 
                  type: 'dropdown',
                  value: 'Сколько гостей',
                  list: [
                    { name: 'взрослые' },
                    { name: 'дети' },
                    { name: 'младенцы' }
                  ],
                  apply: true,
                  expanded: true
                }
              })
            .dropdowns_section_3
              +section({
                title: { name: 'dropdown' },
                content: { 
                  type: 'dropdown',
                  value: '3 гостя',
                  list: [
                    { name: 'взрослые', count: 2 },
                    { name: 'дети', count: 1 },
                    { name: 'младенцы' }
                  ],
                  apply: true,
                  clear: true,
                  expanded: true
                }
              })
        .form-elements__section.form-elements__section_margin_to-check-lists
          .check-lists
            .check-lists_section_1
              +section({
                title: { name: 'expandable checkbox list' },
                content: { 
                  type: 'expandable-checkbox-list'
                }
              })
              +section({
                title: { name: 'expandable checkbox list' },
                content: { 
                  type: 'expandable-checkbox-list',
                  id: 'checkbox-list',
                  expanded: true,
                  checks: [
                    {label: 'Завтрак'},
                    {label: 'Письменный стол', checked: true},
                    {label: 'Стул для кормления', checked: true},
                    {label: 'Кроватка', checked: true},
                    {label: 'Телевизор'},
                    {label: 'Шампунь'}
                  ]
                }
              })
            .check-lists_section_2
              +section({
                title: { name: 'Rich Checkbox Buttons' },
                content: { 
                  type: 'checkbox',
                  id: 'checkboxrich',
                  checks: [
                    {
                      label: 'Широкий коридор',
                      details: 'Ширина коридоров в номере\nне менее 91 см.'
                    },
                    {
                      label: 'Помощник для инвалидов',
                      details: `На 1 этаже вас встретит специалист\nи проводит до номера.`
                    }
                  ]
                }
              })
            .check-lists_section_3
              +section({
                title: { name: 'Bullet List' },
                content: { 
                  type: 'bullet-list',
                  list: [
                    'Нельзя с питомцами',
                    'Без вечеринок и мероприятий',
                    'Время прибытия — после 13:00,\nа выезд до 12:00'
                  ]
                }
              })
        .form-elements__section.form-elements__section_margin_to-others
          .others
            .extras
              +section({
                content: {
                  type: 'extra-list',
                  list: [
                    {
                      name: 'Комфорт',
                      details: 'Шумопоглощающие стены'
                    },
                    {
                      name: 'Удобство',
                      details: 'Окно в каждой из спален'
                    },
                  ]
                }
              })
            .comments
              +section({
                content: {
                  type: 'comment',
                  id: 'comment1',
                  username: 'Мурад Сарафанов',
                  src: '../images/murad.png',
                  datetime: '5 дней назад',
                  text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.',
                  likes: 12,
                  liked: true
                }
              })

extends ../../../layout
include ./field-elements/field-elements.pug
include ./check-elements/check-elements.pug
include ./button-elements/button-elements.pug

include ./dropdowns/dropdowns.pug

include ./lists/lists.pug

include ../../../components/logo/logo.pug

include ../../../components/section/section.pug

block variables
  - var title = "TOXIN - UI kit"

block content
    HEADER.page__header
      +logo
    MAIN.page__main
      .form-elements
        .form-elements__section
          .same-type-elements
            .same-type-elements__section
              +field-elements
            .same-type-elements__section.same-type-elements__section_shrunken
              +check-elements
            .same-type-elements__section
              +button-elements
        .form-elements__section.form-elements__section_margin_to-dropdowns
          .same-type-elements
            .same-type-elements__section
              +dropdowns
            .same-type-elements__section
              +dropdowns("fullset")
            .same-type-elements__section
              +dropdowns("fullset-example")
      .form-elements__section.form-elements__section_margin_to-check-lists
          .same-type-elements
            .same-type-elements__section
              +lists
            .same-type-elements__section
              +section({
                title: { name: 'Rich Checkbox Buttons' },
                content: { 
                  type: 'checkbox',
                  id: 'checkboxrich',
                  checks: [
                    {
                      label: 'Широкий коридор',
                      details: 'Ширина коридоров в номере\nне менее 91 см.'
                    },
                    {
                      label: 'Помощник для инвалидов',
                      details: `На 1 этаже вас встретит специалист\nи проводит до номера.`
                    }
                  ]
                }
              })
            .same-type-elements__section
              +section({
                title: { name: 'Bullet List' },
                content: { 
                  type: 'bullet-list',
                  list: [
                    'Нельзя с питомцами',
                    'Без вечеринок и мероприятий',
                    'Время прибытия — после 13:00,\nа выезд до 12:00'
                  ]
                }
              })
      .form-elements__section.form-elements__section_margin_to-others
          .others
            .extras
              +section({
                content: {
                  type: 'extra-list',
                  list: [
                    {
                      name: 'Комфорт',
                      details: 'Шумопоглощающие стены'
                    },
                    {
                      name: 'Удобство',
                      details: 'Окно в каждой из спален'
                    },
                  ]
                }
              })
            .comments
              +section({
                content: {
                  type: 'comment',
                  id: 'comment1',
                  username: 'Мурад Сарафанов',
                  src: '../images/murad.png',
                  datetime: '5 дней назад',
                  text: 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.',
                  likes: 12,
                  liked: true
                }
              })

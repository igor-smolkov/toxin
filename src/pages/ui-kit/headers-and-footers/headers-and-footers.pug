                link: "/change-link", 
                text: "Услуги", 
                isDropdown: true, 
                list: [
                  { link: "/change-link", text: 'Прачечная' }, 
                  { link: "/change-link", text: 'Трансфер' }, 
                  { link: "/change-link", text: 'Триумф' },
                ], 
                name: "services-1" 
              },
              { link: "/change-link", text: "Вакансии" },
              { link: "/change-link", text: "Новости" },
              { 
                link: "/change-link", 
                text: "Соглашения", 
                isDropdown: true, 
                list: [
                  { link: "/change-link", text: 'Бронирование' }, 
                  { link: "/change-link", text: 'Wi-Fi' }, 
                  { link: "/change-link", text: 'Разоружение' },
                ], 
                name: "agreements-1" 
              },
            ]
          })
      ARTICLE.headers-and-footers__unit
        +header({ isCustom: true, name: "demo-2" })
          +menu({
            navLinks: [
              { link: "/change-link", text: "О нас", isHovered: true },
              { 
                link: "/change-link", 
                text: "Услуги", 
                isDropdown: true, 
                list: [
                  { link: "/change-link", text: 'Прачечная' }, 
                  { link: "/change-link", text: 'Трансфер' }, 

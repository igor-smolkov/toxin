extends ../../../components/layout/layout

include ../../../components/logo/logo.pug
include ../../../components/header/header.pug
include ../../../components/menu/menu.pug
include ../../../components/footer/footer.pug

block variables
  - const title = "TOXIN - UI kit"
  - const description = "Шапка и подвал"
  - const page = "page_gray"
  - const keywords = "toxin, ui-kit, headers, footers"

block content
  HEADER.page__header
    +logo({ isSimplified: true })
  MAIN.page__main
    .headers-and-footers
      ARTICLE.headers-and-footers__unit.headers-and-footers__unit_first
        +header({ isCustom: true, name: "demo-1" })
          +menu({
            navLinks: [
              { link: "/change-link", text: "О нас", isHovered: true },

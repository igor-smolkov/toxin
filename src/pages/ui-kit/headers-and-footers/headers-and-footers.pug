extends ../../../layout

include ../../../components/logo/logo.pug
include ../../../components/header/header.pug
include ../../../components/menu/menu.pug
include ../../../components/footer/footer.pug

block variables
  - var title = "TOXIN - UI kit"
  - var page = "page_gray"

block content
  HEADER.page__header
    +logo({ isSimplified: true })
  MAIN.page__main
    .headers-and-footers
      ARTICLE.headers-and-footers__unit.headers-and-footers__unit_first
        +header({ isCustomed: true })
          +menu({
            id: "demo-1",
            navLinks: [
              { link: "/change-link", text: "О нас", isHovered: true },
              { link: "/change-link", text: "Услуги", isDropdown: true, list: ['Элемент 1', 'Элемент 2', 'Элемент 3'] },
              { link: "/change-link", text: "Вакансии" },
              { link: "/change-link", text: "Новости" },
              { link: "/change-link", text: "Соглашения", isDropdown: true, list: ['Элемент 1', 'Элемент 2', 'Элемент 3'] },
            ]
          })
      ARTICLE.headers-and-footers__unit
        +header({ isCustomed: true })
          +menu({
            id: "demo-2",
            navLinks: [
              { link: "/change-link", text: "О нас", isHovered: true },
              { link: "/change-link", text: "Услуги", isDropdown: true, list: ['Элемент 1', 'Элемент 2', 'Элемент 3'] },
              { link: "/change-link", text: "Вакансии" },
              { link: "/change-link", text: "Новости" },
              { link: "/change-link", text: "Соглашения", isDropdown: true, list: ['Элемент 1', 'Элемент 2', 'Элемент 3'] },
            ],
            user: { link: "/change-link", text: "Юлий Цезарь" }
          })
      ARTICLE.headers-and-footers__unit
        +footer
      ARTICLE.headers-and-footers__unit.headers-and-footers__unit_last
        +footer({ asCard: true })
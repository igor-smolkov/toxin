              { link: "/change-link", text: "Вакансии" },
              { link: "/change-link", text: "Новости" },
              { 
                link: "/change-link", 
                text: "Соглашения", 
                isDropdown: true, 
                list: [
                  { link: "/change-link", text: 'Бронирование' }, 
                  { link: "/change-link", text: 'Wi-Fi' }, 
                  { link: "/change-link", text: 'Разоружение' },
                ], 
                name: "agreements-2"
              },
            ],
            user: { link: "/change-link", text: "Юлий Цезарь" }

extends ../../../layout

include ../../../components/logo/logo.pug
include ../../../components/card/card.pug
include ../../../components/card-title/card-title.pug
include ../../../components/card-form/card-form.pug
include ../../../components/calendar/calendar.pug
include ../../../components/preview/preview.pug

block variables
  - const title = "TOXIN - UI kit"
  - const descr = "Карточки"
  - const page = "page_gray"
  - const keywords = "toxin, ui-kit, cards"

block content
  HEADER.page__header
    +logo({ isSimplified: true })
  MAIN.page__main
    .cards
      ARTICLE.cards__unit
        +card({ title: "Найдём номера под ваши пожелания" })
          +card-form({ for: "wishes" })
      ARTICLE.cards__unit
        +card({ title: "Регистрация аккаунта" })
          +card-form({ for: "check-in" })
      ARTICLE.cards__unit
        +card({ 
          title: {
            main: { prefix: "№", content: "888", postfix: "Люкс" },
            details: { first: "9 990₽", second: "в сутки" }
          }
        })
          +card-form({ for: "room" })
      ARTICLE.cards__unit
        +card({ title: "Войти" })
          +card-form({ for: "log-in" })
      ARTICLE.cards__unit
        +card({ isMedium: true, isEmpty: true })
          +calendar({  
            from: "2019-08-19", 
            to: "2019-08-23",
            active: "2019-08-08",
          })
      ARTICLE.cards__unit
        +card({ isSmall: true, isEmpty: true })
          HEADER.card__header
            +preview({ 
              imgs: [
                "../images/room_888.png",
                "../images/room_350.png",
                "../images/room_352.png",
                "../images/room_444.png",
              ],
              isHovered: true, 
            })
          SECTION.card__body
            H2.card__title.card__title_margin_none
              +card-title({
                main: { prefix: "№", content: "888", postfix: "Люкс", isShiftedPostfix: true },
                details: { first: "9 990₽", second: "в сутки" }
              })
            +card-form({ 
              for: "room-rate", 
              options: { rate: 5, reviews: 145 }
            })
      ARTICLE.cards__unit
        +card({ isSmall: true, isEmpty: true })
          HEADER.card__header
            +preview({ 
              imgs: [
                "../images/room_840.png",
                "../images/room_350.png",
                "../images/room_352.png",
                "../images/room_444.png",
              ]
            })
          SECTION.card__body
            H2.card__title.card__title_margin_none
              +card-title({
                main: { prefix: "№", content: "840" },
                details: { first: "9 900₽", second: "в сутки" }
              })
            +card-form({ 
              for: "room-rate", 
              options: { rate: 4, reviews: 65 }
            })
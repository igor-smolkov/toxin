extends ../../../layouts/website/website

include ../../../components/card/card.pug
include ../../../components/card-form/card-form.pug
include ../../../components/carousel/carousel.pug

block variables
  -
    const options = { 
      title: "TOXIN - Sign in",
      description: "Пример страницы входа",
      keywords: "toxin, sign-in",
    }
  -
    const carouselOptions = {
      slides: [
        "../assets/images/log-room-2.jpg",
        "../assets/images/log-room-1.jpg",
      ],
      delaySec: 10,
    }

block content
  ARTICLE.sign-in
    .sign-in__background
      +carousel(carouselOptions)
    SECTION.sign-in__card
      +card({ title: "Войти" })
        +card-form({ type: "log-in" })

extends ../../../layout

include ../../../components/header/header.pug
include ../../../components/footer/footer.pug
include ../../../components/card/card.pug
include ../../../components/card-form/card-form.pug
include ../../../components/carousel/carousel.pug

block variables
  - const title = "TOXIN - Landing"
  - const descr = "Пример landing-страницы с раскрытым дропдауном и выбраным числом гостей"
  - const keywords = "toxin, landing, dropdown, guests"

block content
  HEADER.page__header
    +header
  MAIN.page__main
    .landing
      .landing__background
        +carousel({
          slides: [ "../images/landing-room-1.jpg", "../images/landing-room-2.jpg", "../images/landing-room-3.jpg"],
          delaySec: 10,
        })
      .landing__content
        .landing__card
          +card({ title: "Найдём номера под ваши пожелания" })
            +card-form({ 
              for: "wishes", 
              options: {
                dateFrom: "2019-08-19",
                dateTo: "2019-08-23",
                guests: "3 гостя",
                guestList: [
                  { name: "взрослые", count: 2, category: "гость" },
                  { name: "дети", count: 1, category: "гость" },
                  { name: "младенцы", category: "младенец" }
                ],
                isGuestListExpanded: true,
              }
            })
        P.landing__about="Лучшие номера для вашей работы, отдыха и просто вдохновения"
  FOOTER.page__footer
    +footer
extends ../../../layout

include ../../../components/header/header.pug
include ../../../components/footer/footer.pug
include ../../../components/card/card.pug

include ../../../components/section/section.pug

block variables
  - var title = 'TOXIN - Search room'

block content
    +header
    main.search__main
      aside.search__filter
        +section({
          title: { name: 'даты пребывания в отеле' },
          content: { 
            type: 'dropdown',
            value: '19 авг - 23 авг',
            mode: 'filter'
          }
        })
        +section({
          title: { name: 'Гости' },
            content: { 
              type: 'dropdown',
              value: '3 гостя, 1 младенец'
            }
        })
        +section({
          title: { 
            name: 'диапазон цены', 
            details: '5 000₽ - 10 000₽' 
          },
          content: {
            type: 'slider',
            min: 31.75,
            max: 63.5,
            details: 'Стоимость за сутки пребывания в номере'
          }
        })
        +section({
          title: { name: 'Правила дома' },
          content: { 
            type: 'checkbox',
            id: 'checkbox1',
            checks: [
              {label: 'Можно курить'},
              {label: 'Можно с питомцами', checked: true},
              {label: 'Можно пригласить гостей\n(до 10 человек)', checked: true}
            ]
          }
        })
        +section({
          title: { name: 'доступность' },
          content: { 
            type: 'checkbox',
            id: 'checkboxrich',
            checks: [
              {
                label: 'Широкий коридор',
